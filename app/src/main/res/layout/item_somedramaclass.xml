<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_them"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:background="@color/orange"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_following_bangumi"
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:layout_height="40dp" />

        <TextView
            android:text="@string/to_them"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_line"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:background="@color/pink_30"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_bangumi_calendar_7"
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:layout_height="40dp"  />

        <TextView
            android:text="@string/time_line"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/ll_index"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:background="@color/blue_30"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_following_bangumi"
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:layout_height="40dp"  />

        <TextView
            android:text="@string/index"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
